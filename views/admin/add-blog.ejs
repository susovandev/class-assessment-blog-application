<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs", {title: 'Create Blog'}) %>

<body class="bg-gray-100 min-h-screen">

  <!-- Toast Flash -->
  <%- include('../partials/toast.ejs') %>

  <div class="max-w-5xl mx-auto py-10 px-4">

    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-800">Create New Blog</h1>
      <p class="text-gray-600 mt-1">
        Publish a new article to your platform
      </p>
    </div>

    <!-- Blog Form -->
    <form
      action="/admin/blogs/add"
      method="POST"
      enctype="multipart/form-data"
      class="bg-white rounded-xl shadow-lg p-8 space-y-6"
    >

      <!-- Blog Title -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Blog Title
        </label>
        <input
          type="text"
          name="title"
          placeholder="Enter blog title"
          required
          class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none"
        />
      </div>

      <!-- Blog Image -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Featured Image
        </label>
        <input
          type="file"
          name="image"
          accept="image/*"
          required
          class="w-full border rounded-md p-2 focus:ring-2 focus:ring-blue-500"
        />
        <p class="text-xs text-gray-500 mt-1">
          Upload a blog cover image (JPG, PNG, WEBP)
        </p>
      </div>

      <!-- Category Dropdown -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Category
        </label>
        <select
          name="category"
          class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500"
        >
          <option value="">-- Select Category --</option>

          <% categories && categories.forEach(category => { %>
            <option value="<%= category._id %>">
              <%= category.name %>
            </option>
          <% }) %>

        </select>
      </div>

      <!-- Tags -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Tags
        </label>
        <input
          type="text"
          name="tags"
          placeholder="e.g. javascript, nodejs, backend"
          class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500"
        />
        <p class="text-xs text-gray-500 mt-1">
          Separate tags using commas
        </p>
      </div>

      <!-- Blog Content -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Content
        </label>
        <textarea
          name="content"
          rows="8"
          placeholder="Write your blog content here..."
          required
          class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none"
        ></textarea>
      </div>

      <!-- Actions -->
      <div class="flex justify-end gap-4 pt-4">
        <a
          href="/admin/dashboard"
          class="px-6 py-2 rounded-md bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium"
        >
          Cancel
        </a>

        <button
          type="submit"
          class="px-6 py-2 rounded-md bg-blue-600 hover:bg-blue-700 text-white font-semibold"
        >
          Publish Blog
        </button>
      </div>

    </form>

  </div>

</body>
</html>
