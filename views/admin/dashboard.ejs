<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs", {title: "Admin Dashboard"}) %>

	<body class="bg-gray-100 min-h-screen flex">
		<!-- Sidebar -->
		<aside class="w-64 bg-gray-900 text-gray-100 flex flex-col">
			<!-- Logo -->
			<div class="px-6 py-5 text-2xl font-bold border-b border-gray-800">
				Admin Panel
			</div>

			<!-- Navigation -->
			<nav class="flex-1 px-4 py-6 space-y-2">
				<a
					href="/admin/dashboard"
					class="block px-4 py-2 rounded bg-gray-800 text-white font-medium"
				>
					Dashboard
				</a>

				<a
					href="/admin/categories"
					class="block px-4 py-2 rounded hover:bg-gray-800"
				>
					Manage Categories
				</a>

				<a
					href="/admin/blogs"
					class="block px-4 py-2 rounded hover:bg-gray-800"
				>
					Manage Blogs
				</a>

				<a
					href="/admin/users"
					class="block px-4 py-2 rounded hover:bg-gray-800"
				>
					Manage Users
				</a>

				<a
					href="/admin/comments"
					class="block px-4 py-2 rounded hover:bg-gray-800"
				>
					Manage Comments
				</a>
			</nav>

			<!-- Footer -->
			<div class="px-4 py-4 border-t border-gray-800 text-sm text-gray-400">
				Logged in as
				<span class="text-white font-medium"><%= admin?.username %></span>
			</div>
		</aside>

		<!-- Main Content -->
		<main class="flex-1 p-8">
			<!-- Toast Flash -->
			<%- include('../partials/toast') %>

			<!-- Header -->
			<div class="mb-8">
				<h1 class="text-3xl font-bold text-gray-800">Dashboard Overview</h1>
				<p class="text-gray-600 mt-1">Monitor application statistics</p>
			</div>

			<!-- Stats Grid -->
			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
				<!-- Users -->
				<div class="bg-white rounded-xl shadow p-6">
					<p class="text-sm text-gray-500">Total Users</p>
					<h2 class="text-3xl font-bold text-gray-800 mt-2">
						<%= stats?.totalUsers %>
					</h2>
				</div>

				<!-- Categories -->
				<div class="bg-white rounded-xl shadow p-6">
					<p class="text-sm text-gray-500">Total Categories</p>
					<h2 class="text-3xl font-bold text-gray-800 mt-2">
						<%= stats?.totalCategories %>
					</h2>
				</div>

				<!-- Blogs -->
				<div class="bg-white rounded-xl shadow p-6">
					<p class="text-sm text-gray-500">Total Blogs</p>
					<h2 class="text-3xl font-bold text-gray-800 mt-2">
						<%= stats?.totalBlogs %>
					</h2>
				</div>

				<!-- Comments -->
				<div class="bg-white rounded-xl shadow p-6">
					<p class="text-sm text-gray-500">Total Comments</p>
					<h2 class="text-3xl font-bold text-gray-800 mt-2">
						<%= stats?.totalComments %>
					</h2>
				</div>
			</div>

			<!-- Quick Actions -->
			<div class="bg-white rounded-xl shadow p-6">
				<h2 class="text-xl font-semibold text-gray-800 mb-4">Quick Actions</h2>

				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
					<a
						href="/admin/categories/add"
						class="p-4 border rounded-lg hover:bg-gray-50 text-center font-medium"
					>
						â• Add Category
					</a>

					<a
						href="/admin/blogs/add"
						class="p-4 border rounded-lg hover:bg-gray-50 text-center font-medium"
					>
						âœï¸ Create Blog
					</a>

					<a
						href="/admin/users"
						class="p-4 border rounded-lg hover:bg-gray-50 text-center font-medium"
					>
						ğŸ‘¥ View Users
					</a>

					<a
						href="/admin/comments"
						class="p-4 border rounded-lg hover:bg-gray-50 text-center font-medium"
					>
						ğŸ’¬ Manage Comments
					</a>
				</div>
			</div>
		</main>
	</body>
</html>
