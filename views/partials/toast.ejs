<!-- Toast Container -->
<div id="toast-container" class="fixed top-5 right-5 z-50 space-y-3">
  <% if (success && success.length > 0) { %>
  <div
    class="toast transition-all duration-500 bg-green-600 text-white px-4 py-3 rounded shadow-lg min-w-[260px]"
  >
    <%= success[0] %>
  </div>
  <% } %>

  <% if (error && error.length > 0) { %>
  <div
    class="toast transition-all duration-500 bg-red-600 text-white px-4 py-3 rounded shadow-lg min-w-[260px]"
  >
    <%= error[0] %>
  </div>
  <% } %>
</div>

<!-- Toast Auto Dismiss -->
<script>
  const toasts = document.querySelectorAll('.toast');

  toasts.forEach((toast, index) => {
    setTimeout(
      () => {
        toast.classList.add('opacity-0', 'translate-x-5');
        setTimeout(() => toast.remove(), 500);
      },
      3000 + index * 300
    );
  });
</script>
